#include <stdio.h>

int main() {
    int X, Y;
    int totalBuckets, maxPeople;

    printf("Enter the capacity of the geyser (X) in liters: ");
    scanf("%d", &X);

    printf("Enter the capacity of the bucket (Y) in liters: ");
    scanf("%d", &Y);

    totalBuckets = X / Y;

    maxPeople = totalBuckets / 2;

    printf("The maximum number of people who can take a bath is: %d\n", maxPeople);

    return 0;
}
